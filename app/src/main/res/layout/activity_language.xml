<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context="com.example.cheshta.nirmalhindan.LanguageActivity">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
        android:layout_marginTop="0dp"
    android:src="@drawable/swachh_bharat_abhiyan"
        android:layout_marginBottom="20dp"
    />
    <LinearLayout
        android:id="@+id/layoutLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <TextView
        android:id="@+id/tvSelectLanguage"
        android:text="SELECT LANGUAGE"
        android:textSize="35sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSelectLanguageHindi"
        android:text="भाषा चूनिये"
        android:textSize="40sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHindi"
            android:text="हिंदी"
            android:textSize="40dp"
            android:textColor="#FFF"
            android:background="@drawable/button_language"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/btnEnglish"
            android:text="English"
            android:textSize="30dp"
            android:textColor="#FFF"
            android:background="@drawable/button_language"
            android:layout_margin="20dp"
            android:layout_width="150dp"
            android:layout_height="70dp" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
